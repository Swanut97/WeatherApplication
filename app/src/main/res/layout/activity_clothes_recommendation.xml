<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".ClothesRecommendationActivity">

    //지역, 설정버튼
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="11"
        android:background="@drawable/border">
        <TextView
            android:id="@+id/admin_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:textSize="40dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/sub_locality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/admin_area"
            android:layout_alignBottom="@id/admin_area"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:textSize="30dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:src="@drawable/setting_icon"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitEnd"
                android:adjustViewBounds="true"
                android:clickable="true"/>
        </LinearLayout>
    </RelativeLayout>

    //투표1
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Q1. 성별"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text=" 남성"
                android:textSize="20dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text=" 여성"
                android:textSize="20dp"/>
        </RadioGroup>
    </LinearLayout>

    //투표2
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="Q2. 오늘 무슨 옷을 입으셨나요?"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text=" 코트"
                android:textSize="20dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text=" 패딩"
                android:textSize="20dp"/>
        </RadioGroup>
    </LinearLayout>

    //투표3
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="Q3. 지금 입고 있는 옷은 어떤가요?"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text=" 더움"
                android:textSize="20dp"
                android:textColor="#FF0000"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text=" 적당"
                android:textSize="20dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text=" 추움"
                android:textSize="20dp"
                android:textColor="#0009FF"/>
        </RadioGroup>
    </LinearLayout>

    //투표 버튼
    <Button
        android:id="@+id/vote_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="투표하기"/>

    //투표 결과 기본 정보
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="투표 결과"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="#000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/result"
            android:layout_alignBottom="@id/result"
            android:text=" (코트 입으면 추워요~)"
            android:layout_marginRight="10dp"
            android:textSize="12dp"/>

        //추움 색 표시
        <LinearLayout
            android:id="@+id/cold_graph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추움"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="#0009FF">
            </LinearLayout>
        </LinearLayout>

        //적당 색 표시
        <LinearLayout
            android:id="@+id/well_graph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/cold_graph"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="적당"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="#7C7C7C">
            </LinearLayout>
        </LinearLayout>

        //더움 색 표시
        <LinearLayout
            android:id="@+id/hot_graph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/well_graph"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="더움"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="#FF0000">
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    //남자 글씨
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남자"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(코트: 73%, 패딩: 27%)"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"/>
    </LinearLayout>

    //남자 투표 결과
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical">

            //남자 투표 결과1
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="코트"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#505050"/>

                //막대 그래프
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="5dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="#FF0000"/>
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#7C7C7C"/>
                    <LinearLayout
                        android:layout_width="230dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="#0009FF"/>

                </LinearLayout>
            </LinearLayout>
            //남자 투표 결과2
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="패딩"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#505050"/>

                //막대 그래프
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="#FF0000"/>
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#7C7C7C"/>
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="#0009FF"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    //여자 글씨
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여자"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(코트: 73%, 패딩: 27%)"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"/>
    </LinearLayout>

    //여자 투표 결과
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical">

            //여자 투표 결과1
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="코트"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#505050"/>

                //막대 그래프
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="5dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="#FF0000"/>
                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#7C7C7C"/>
                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="#0009FF"/>

                </LinearLayout>
            </LinearLayout>
            //여자 투표 결과2
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="패딩"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#505050"/>

                //막대 그래프
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="#FF0000"/>
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#7C7C7C"/>
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="#0009FF"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>